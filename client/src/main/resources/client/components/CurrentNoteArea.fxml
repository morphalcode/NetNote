<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<Pane fx:id="CurrentNoteAreaPane" stylesheets="/client/CSS/ButtonsStylesheet.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.components.CurrentNoteAreaCtrl">
    <TextArea fx:id="noteContentTextArea" styleClass="note-area" layoutX="177.0" layoutY="148.0" prefHeight="630.0"
              prefWidth="429.0" wrapText="true" AnchorPane.bottomAnchor="1.0"/>
    <TextField fx:id="titleBar" layoutX="177.0" layoutY="114.0" prefHeight="35.0" prefWidth="291.0"/>
    <WebView fx:id="markdownRenderView" layoutX="607.0" layoutY="148.0" prefHeight="630.0" prefWidth="429.0"/>
    <SplitMenuButton fx:id="collectionSplitMenuButton" layoutX="468.0" layoutY="114.0" mnemonicParsing="false"
                     prefHeight="35.0" prefWidth="138.0" text="SplitMenuButton">
        <items>
            <MenuItem mnemonicParsing="false" text="Action 1"/>
            <MenuItem mnemonicParsing="false" text="Action 2"/>
        </items>
    </SplitMenuButton>
    <ToggleButton fx:id="markDownToggleButton" styleClass="MarkDown-toggle-button" layoutX="919.0" layoutY="114.0"
                  mnemonicParsing="false" prefHeight="35.0" prefWidth="117.0" text="MarkDown" textFill="WHITE">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
        <graphic>
            <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/client/images/icons/MarkDownIcon.png"/>
                </image>
            </ImageView>
        </graphic>
    </ToggleButton>
</Pane>
