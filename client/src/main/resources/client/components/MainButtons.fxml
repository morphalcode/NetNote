<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="MainButtonsPane" prefHeight="112.0" prefWidth="114.0" styleClass="main-button-pane" stylesheets="/client/CSS/ButtonsStylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.components.MainButtonsCtrl">
    <Button fx:id="addNoteButton" layoutX="3.0" layoutY="65.0" mnemonicParsing="false" onAction="#addButtonClick" prefHeight="35.0" prefWidth="35.0" styleClass="add-button">
      <graphic>
         <ImageView fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@/client/images/icons/PlusIcon.png" />
            </image>
         </ImageView>
      </graphic></Button>
    <Button fx:id="deleteNoteButton" layoutX="41.0" layoutY="65.0" mnemonicParsing="false" onAction="#removeNoteButtonClick" prefHeight="35.0" prefWidth="35.0" styleClass="delete-button">
      <graphic>
         <ImageView fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@/client/images/icons/TrashIcon.png" />
            </image>
         </ImageView>
      </graphic></Button>
    <Button fx:id="refreshButton" layoutX="79.0" layoutY="65.0" mnemonicParsing="false" onAction="#refreshButton" prefHeight="35.0" prefWidth="35.0" styleClass="refresh-button">
      <graphic>
         <ImageView fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@/client/images/icons/RefreshIcon.png" />
            </image>
         </ImageView>
      </graphic></Button>
</Pane>
